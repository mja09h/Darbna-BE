{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": false,
    "outDir": "dist",
    "types": ["node"],
    "lib": ["ES2020"],
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
